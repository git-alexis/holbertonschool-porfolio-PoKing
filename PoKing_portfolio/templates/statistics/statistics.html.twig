{% extends 'base.html.twig' %}

{% block title %}Get statistics{% endblock %}

{% block body %}
<h2>Statistics calculator</h2>
<p><span>*</span> : mandatory field</p>
<form method="post" action="{{ path('app_statistics') }}">
        <h3>Board</h3>
        <div class="table_div">
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>first card</th>
                    <th>second card</th>
                    <th>third card</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>* numbers</td>
                    <td>
                        <select name="numbersboard1" id="numbersboard1select" onchange="afficherCarte1Board()" required>
                            <option value="Ace" {% if numbersboard1 is not empty and numbersboard1 == "Ace" %} selected {% endif %}>Ace</option>
                            <option value="King" {% if numbersboard1 is not empty and numbersboard1 == "King" %} selected {% endif %}>King</option>
                            <option value="Queen" {% if numbersboard1 is not empty and numbersboard1 == "Queen" %} selected {% endif %}>Queen</option>
                            <option value="Jack" {% if numbersboard1 is not empty and numbersboard1 == "Jack" %} selected {% endif %}>Jack</option>
                            <option value="Ten" {% if numbersboard1 is not empty and numbersboard1 == "Ten" %} selected {% endif %}>Ten</option>
                            <option value="9" {% if numbersboard1 is not empty and numbersboard1 == "9" %} selected {% endif %}>9</option>
                            <option value="8" {% if numbersboard1 is not empty and numbersboard1 == "8" %} selected {% endif %}>8</option>
                            <option value="7" {% if numbersboard1 is not empty and numbersboard1 == "7" %} selected {% endif %}>7</option>
                            <option value="6" {% if numbersboard1 is not empty and numbersboard1 == "6" %} selected {% endif %}>6</option>
                            <option value="5" {% if numbersboard1 is not empty and numbersboard1 == "5" %} selected {% endif %}>5</option>
                            <option value="4" {% if numbersboard1 is not empty and numbersboard1 == "4" %} selected {% endif %}>4</option>
                            <option value="3" {% if numbersboard1 is not empty and numbersboard1 == "3" %} selected {% endif %}>3</option>
                            <option value="2" {% if numbersboard1 is not empty and numbersboard1 == "2" %} selected {% endif %}>2</option>
                        </select>
                    </td>
                    <td>
                        <select name="numbersboard2" id="numbersboard2select" onchange="afficherCarte2Board()" required>
                            <option value="Ace" >Ace</option>
                            <option value="King" >King</option>
                            <option value="Queen" >Queen</option>
                            <option value="Jack" >Jack</option>
                            <option value="Ten" >Ten</option>
                            <option value="9" >9</option>
                            <option value="8" >8</option>
                            <option value="7" >7</option>
                            <option value="6" >6</option>
                            <option value="5" >5</option>
                            <option value="4" >4</option>
                            <option value="3" >3</option>
                            <option value="2" >2</option>
                        </select>
                    </td>
                    <td>
                        <select name="numbersboard3" id="numbersboard3select" onchange="afficherCarte3Board()" required>
                            <option value="Ace" >Ace</option>
                            <option value="King" >King</option>
                            <option value="Queen" >Queen</option>
                            <option value="Jack" >Jack</option>
                            <option value="Ten" >Ten</option>
                            <option value="9" >9</option>
                            <option value="8" >8</option>
                            <option value="7" >7</option>
                            <option value="6" >6</option>
                            <option value="5" >5</option>
                            <option value="4" >4</option>
                            <option value="3" >3</option>
                            <option value="2" >2</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>* suits</td>
                    <td>
                        <select name="suitsboard1" id="suitsboard1select" onchange="afficherCarte1Board()" required>
                            <option value="Clubs" {% if suitsboard1 is not empty and suitsboard1 == "Clubs" %} selected {% endif %}>Clubs</option>
                            <option value="Spades" {% if suitsboard1 is not empty and suitsboard1 == "Spades" %} selected {% endif %}>Spades</option>
                            <option value="Diamonds" {% if suitsboard1 is not empty and suitsboard1 == "Diamonds" %} selected {% endif %}>Diamonds</option>
                            <option value="Hearts" {% if suitsboard1 is not empty and suitsboard1 == "Hearts" %} selected {% endif %}>Hearts</option>
                        </select>
                    </td>
                    <td>
                        <select name="suitsboard2" id="suitsboard2select" onchange="afficherCarte2Board()" required>
                            <option value="Clubs" >Clubs</option>
                            <option value="Spades" >Spades</option>
                            <option value="Diamonds" >Diamonds</option>
                            <option value="Hearts" >Hearts</option>
                        </select>
                    </td>
                    <td>
                        <select name="suitsboard3" id="suitsboard3select" onchange="afficherCarte3Board()" required>
                            <option value="Clubs" >Clubs</option>
                            <option value="Spades" >Spades</option>
                            <option value="Diamonds" >Diamonds</option>
                            <option value="Hearts" >Hearts</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>selection</td>
                    <td>
                        <input id="boardcards1" type="text" name="boardcards1" value="Ac" readonly></input>
                    </td>
                    <td>
                        <input id="boardcards2" type="text" name="boardcards2" value="Ac" readonly></input>
                    </td>
                    <td>
                        <input id="boardcards3" type="text" name="boardcards3" value="Ac" readonly></input>
                    </td>
                </tr>
            </thead>
        </table>
        </div>
        </br>
