<form method="POST" action="{{ path('app_rancking_create', {'id': event.id}) }}">

    <label>* Season ( example : 2024/2025 ) : </label>
    <input type="text" name="season" value="{{ formData['season']|default('') }}" id="length_season">
    </br>
    </br>

    <table>
        <thead>
            <tr>
                <th>* Pseudo</th>
                <th>* Rank</th>
                <th>* Points</th>
                <th>* Kills</th>
            </tr>
        </thead>
        <tbody>
        {% for pseudo in pseudoList %}
            <tr>
                <td class="rounded_left">
                    <input type="text" name="pseudo_{{ loop.index }}" value="{{ pseudo }}" id="pseudo" readonly>
                </td>
                <td>
                    <input type="number" name="rank_{{ loop.index }}" value="{{ formData['rank_' ~ loop.index]|default('') }}" id="rank" required>
                </td>
                <td>
                    <input type="number" name="points_{{ loop.index }}" value="{{ points[loop.index]|default(formData['points_' ~ loop.index]|default(0)) }}" id="points" readonly>
                </td>
                <td class="rounded_right">
                    <input type="number" name="kills_{{ loop.index }}" value="{{ formData['kills_' ~ loop.index]|default('') }}" id="kills" required>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="rounded_all">no registration found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<div class="div_parent_button">
    <div class="div_button div_button_center">
        <button name="calculate" value="calculate" class="btn btn_too_width">Calculate points</button>
    </div>
    <div class="div_button div_button_center">
        <button name="save" value="save" class="btn btn_too_width">Save ranking</button>
    </div>
</div>

</form>
