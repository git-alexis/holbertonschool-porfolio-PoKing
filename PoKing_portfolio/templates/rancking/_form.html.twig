<form method="POST" action="{{ path('app_rancking_create', {'id': event.id}) }}">

<label>* Season </label>
<input type="text" name="season" value="{{ formData['season']|default('') }}" id="length_season">

<div class="table_div">
    <table>
        <thead>
            <tr>
                <th>* Pseudo</th>
                <th>* Rank</th>
                <th>* Points</th>
                <th>* Kills</th>
            </tr>
        </thead>
        <tbody>
        {% for pseudo in pseudoList %}
            <tr>
                <td>
                    <input type="text" name="pseudo_{{ loop.index }}" value="{{ pseudo }}" readonly>
                </td>
                <td>
                    <input type="number" name="rank_{{ loop.index }}" value="{{ formData['rank_' ~ loop.index]|default('') }}" required>
                </td>
                <td>
                    <input type="number" name="points_{{ loop.index }}" value="{{ points[loop.index]|default(formData['points_' ~ loop.index]|default(0)) }}" readonly>
                </td>
                <td>
                    <input type="number" name="kills_{{ loop.index }}" value="{{ formData['kills_' ~ loop.index]|default('') }}" required>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no registration found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="div_parent_button">
    <div class="div_button div_button_center">
        <button name="calculate" value="calculate" class="btn btn_too_width">Calculate points</button>
    </div>
    <div class="div_button div_button_center">
        <button name="save" value="save" class="btn btn_too_width">Save ranking</button>
    </div>
</div>

</form>
