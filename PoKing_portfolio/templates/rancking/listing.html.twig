{% extends 'base.html.twig' %}

{% block title %}All Rankings{% endblock %}

{% block body %}
    <h1>All Rankings</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.label }}</td>
                <td>
                    <a href="{{ path('app_rancking_create', {'id': event.id}) }}">Create ranking</a>
                    <a href="{{ path('app_rancking_view', {'id': event.id}) }}">View ranking</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no rankings found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
